{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "esnext",
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "build",
    "rootDir": "./src",
    "declaration": true,
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
  ]
}